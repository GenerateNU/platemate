{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        },
        "baseUrl": ".",
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
